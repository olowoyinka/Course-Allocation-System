@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



@{

    var gg = UserManager.Users
        .Include(s => s.Department)
            .SingleOrDefault(s => s.UserName == User.Identity.Name);
    <div><i class="fas fa-arrow-left"></i> <h5 class="float-left" style="margin-left:6em">Department of @gg.Department.Name <i class="fas fa-angle-down"></i></h5></div>
}

<div>
    <form method="post" asp-controller="Users" asp-action="LogOutUser">
        <button type="submit" class="btn btn-primary float-right ml-4">
            Logout <i class="fas fa-angle-down"></i>
        </button>
    </form>
</div>
<div><i class="fas fa-arrow-left"></i> <span class="float-right">Hello @User.Identity.Name! <i class="fas fa-angle-down"></i></span></div>