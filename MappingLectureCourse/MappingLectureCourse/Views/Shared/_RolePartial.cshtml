@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (User.IsInRole("Admin"))
{
    <div class="row pb-3">
        <div class="col-12">
            <a class="btn btn-dark" asp-controller="Department" asp-action="Index">Department</a>
        </div>
    </div>
    <div class="row pb-3">
        <div class="col-12">
            <a class="btn btn-dark" asp-controller="Session" asp-action="Index">Session</a>
        </div>
    </div>
    <div class="row pb-3">
        <div class="col-12">
            <a class="btn btn-dark" asp-controller="Users" asp-action="Index">Users</a>
        </div>
    </div>
}