@model MappingLectureCourse.Models.EntryViewModel.SelectSemester

@{
    ViewData["Title"] = "GenerateMapping";
}

<h2>Generate Course Allocation For Lecture</h2>

<hr />

<div class="row">
    <div class="col-md-4 col-4"><a asp-action="Mapping" class="btn btn-primary">Back Home</a></div>
    <div class="offset-4 col-md-4 col-4"><a asp-action="Index" class="btn btn-primary">Record of Course Allocation</a></div>
</div>

<hr />
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerateMapping">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Semester</label>
                <select asp-for="SemesterID" class="form-control">
                    <option value="First">First</option>
                    <option value="Second">Second</option>
                </select>
                <span asp-validation-for="SemesterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}