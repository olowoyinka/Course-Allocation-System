@model MappingLectureCourse.Models.MappingViewModel.Course

@{
    ViewData["Title"] = "Detail";
}

<h3>Detail of the Course</h3>

<br/>

<h3 class="text-danger">@ViewData["Exist"]</h3>

<hr/>

<div class="row">
    <div class="col-md-4 col-4"><a asp-action="Index" class="btn btn-primary">List of Course</a></div>
    <div class="offset-4 col-md-4 col-4"><a asp-action="Update" asp-route-id="@Model.CourseID" class="btn btn-primary">Update the Course</a></div>
</div>

<hr/>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResearchArea)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResearchArea.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level.LevelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseUnit)
        </dd>
    </dl>
</div>
