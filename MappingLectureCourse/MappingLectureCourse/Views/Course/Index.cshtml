@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging
@model PagingList<MappingLectureCourse.Models.MappingViewModel.Course>


@{
    ViewData["Title"] = "Index";
}

<h2>List of Courses</h2>
<hr />

<div class="row">
    <div class="col-md-4 col-4"><a asp-action="Create" class="btn btn-primary">Add New Course</a></div>
    <div class="col-md-7 col-7" style="float:right">
        <form asp-action="Index">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" placeholder="Search ....." class="form-control" name="Search">
                </div>
            </div>
        </form>
    </div>
</div>

<hr/>

<nav aria-label="Products navigation example">
    <vc:pager paging-list="@Model"></vc:pager>
</nav>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResearchArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseUnit)
            </th>
        </tr>
    </thead>

    @if (Model != null)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResearchArea.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semester.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level.LevelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseUnit)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.CourseID">Update the  Course</a> |
                        <a asp-action="Detail" asp-route-id="@item.CourseID">View Detail</a> |
                        <a asp-action="Delete" asp-route-id="@item.CourseID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    }
    else
    {
        <p>No record of the Search</p>
    }

</table>

<nav aria-label="Products navigation example">
    <vc:pager paging-list="@Model" />
</nav>