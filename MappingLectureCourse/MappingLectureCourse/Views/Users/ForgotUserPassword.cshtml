@model MappingLectureCourse.Models.UserViewModel.ListGetAUserPassword

@{
    ViewData["Title"] = "ForgotUserPassword";
}

<div class="row">
    <div class="col-md-12">
        <h3>Forget User Paswword</h3>
    </div>
</div>

<hr />
<h3 class="text-danger">@ViewData["Exist"]</h3>
<div class="row">
    <div class="col-md-4"><a asp-action="Index" class="btn btn-primary">View List Of User</a></div>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Department.Name)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotUserPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserForgetPassword.Newpassword" class="control-label"></label>
                <input asp-for="UserForgetPassword.Newpassword" class="form-control" />
                <span asp-validation-for="UserForgetPassword.Newpassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserForgetPassword.confirmNewPassword" class="control-label"></label>
                <input asp-for="UserForgetPassword.confirmNewPassword" class="form-control" />
                <span asp-validation-for="UserForgetPassword.confirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}