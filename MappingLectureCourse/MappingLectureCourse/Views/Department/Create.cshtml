@model MappingLectureCourse.Models.ContentViewModel.Department

@{
    ViewData["Title"] = "Create";
}





<div class="row">
    <div class="col-md-12">
        <h3>Add New Department</h3>
    </div>
</div>
<h3 class="text-danger">@ViewData["Exist"] </h3>
<hr />

<div class="row">
    <div class="col-md-4"><a asp-action="Index" class="btn btn-primary">View List Of Department</a></div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Department" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
