@model MappingLectureCourse.Models.ContentViewModel.Session

@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-12">
        <h3>Update Session</h3>
    </div>
</div>
<h3 class="text-danger">@ViewData["Exist"] </h3>
<hr />

<div class="row">
    <div class="col-md-4"><a asp-action="Index" class="btn btn-primary">View List Of Session</a></div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SessionID" />
            <div class="form-group">
                <label asp-for="SessionName" class="control-label"></label>
                <input asp-for="SessionName" class="form-control" />
                <span asp-validation-for="SessionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Session" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
